alias alpine='/usr/local/bin/docker run --env DOCKER_HOST="tcp://localhost:2375" --env ALIASES_PWD="${ALIASES_PWD:-$PWD}" --interactive --network "host" --rm --volume "/usr/local/bin/docker:/usr/local/bin/docker" --volume "[TEMP_DIR]/kubectl:/usr/local/bin/kubectl" alpine:${ALPINE_VERSION:-"3.8"}'
alias kubectl='/usr/local/bin/docker run --interactive --network "host" --rm --volume "[HOME]/.kube:/root/.kube" --volume "${ALIASES_PWD:-$PWD}:/kube" --workdir "/kube" chatwork/kubectl:${KUBECTL_VERSION:-"1.11.2"}'
